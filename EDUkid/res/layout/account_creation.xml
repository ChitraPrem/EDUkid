<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@drawable/mickey_mouse"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainback" >

    <Button
        android:id="@+id/createSaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/createEditChildName"
        android:layout_marginLeft="32dp"
        android:layout_toRightOf="@+id/createEditChildName"
        android:text="Save" />

    <ImageView
        android:id="@+id/createUserImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="105dp"
        android:layout_marginLeft="169dp"
        android:src="@drawable/mickey_mouse" />

    <EditText
        android:id="@+id/createEditChildName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/createUserImage"
        android:layout_marginLeft="82dp"
        android:layout_toRightOf="@+id/createUserImage"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/createUploadPhotoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/createEditChildName"
        android:layout_below="@+id/createEditChildName"
        android:layout_marginTop="74dp"
        android:text="Take Photo" />

</RelativeLayout>