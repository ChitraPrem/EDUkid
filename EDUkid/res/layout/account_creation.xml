<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@drawable/mickey_mouse"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/basicback" >

    <Button
        android:id="@+id/createSaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="220dp"
        android:layout_toRightOf="@+id/createEditChildName"
        android:text="Save" />

    <EditText
        android:id="@+id/createEditChildName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/createSaveButton"
        android:layout_marginLeft="323dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <ImageView
        android:id="@+id/userPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:src="@drawable/bottombanner" />

</RelativeLayout>
